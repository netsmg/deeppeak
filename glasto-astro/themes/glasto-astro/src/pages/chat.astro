---
import Base from "@/layouts/Base.astro";

const title = "Chat | DeepPeak";
const meta_title = "Ask DeepPeak";
const description = "Use DeepPeak";
---

<Base title={title} meta_title={meta_title} description={description}>
<div class="flex flex-col h-screen bg-gray-100 dark:bg-gray-900">
  <!-- Chat Header -->
  <div class="p-4 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-center space-x-3">
      <div class="relative">
        <div class="w-10 h-10 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full flex items-center justify-center text-white font-bold">
          AI
        </div>
        <span class="bottom-0 right-0 absolute w-3 h-3 bg-green-400 rounded-full border-2 border-white"></span>
      </div>
      <div>
        <h2 class="font-semibold text-gray-800 dark:text-white">Support Chat</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Typically replies in 2 minutes</p>
      </div>
    </div>
  </div>

  <!-- Chat Messages -->
  <div class="flex-1 overflow-y-auto p-4 space-y-4">
    <!-- Received Message -->
    <div class="flex items-start gap-3">
      <div class="w-8 h-8 bg-gray-300 dark:bg-gray-700 rounded-full flex-shrink-0"></div>
      <div class="max-w-[70%]">
        <div class="bg-white dark:bg-gray-800 p-4 rounded-2xl rounded-tl-none shadow-sm">
          <p class="text-gray-800 dark:text-gray-200">Hi! How can I help you today?</p>
          <span class="text-xs text-gray-400 mt-1 block">10:42 AM</span>
        </div>
      </div>
    </div>

    <!-- Sent Message -->
    <div class="flex items-start gap-3 justify-end">
      <div class="max-w-[70%]">
        <div class="bg-gradient-to-r from-cyan-500 to-blue-600 text-white p-4 rounded-2xl rounded-tr-none shadow-sm">
          <p>I need help with my recent order</p>
          <span class="text-xs text-cyan-100 mt-1 block">10:43 AM</span>
        </div>
      </div>
      <div class="w-8 h-8 bg-blue-500 rounded-full flex-shrink-0 flex items-center justify-center text-white font-medium">
        Y
      </div>
    </div>

    <!-- System Message -->
    <div class="text-center text-sm text-gray-500 dark:text-gray-400 py-2">
      Yesterday
    </div>
  </div>

  <!-- Message Input -->
  <div class="p-4 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-2">
      <button class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </button>
      <button class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
        </svg>
      </button>
      <input 
        type="text" 
        placeholder="Type your message..." 
        class="flex-1 p-3 bg-gray-50 dark:bg-gray-700 rounded-full border border-gray-200 dark:border-gray-600 focus:outline-none focus:border-cyan-400 focus:ring-1 focus:ring-cyan-400 dark:text-gray-200"
      >
      <button class="p-2 text-white bg-cyan-500 rounded-full hover:bg-cyan-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
        </svg>
      </button>
    </div>
  </div>
</div>
</Base>
<style>
  /* Custom scrollbar for chat messages */
  .overflow-y-auto::-webkit-scrollbar {
    width: 6px;
  }
  
  .overflow-y-auto::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 3px;
  }
  
  .overflow-y-auto::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
  }
  
  .dark .overflow-y-auto::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .dark .overflow-y-auto::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
  }
</style>
