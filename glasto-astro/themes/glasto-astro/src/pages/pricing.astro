---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import Faq from "@/partials/Faq.astro";
import PricingSection from "@/partials/PricingSection.astro";
import Testimonial from "@/partials/Testimonial.astro";
import { getEntry } from "astro:content";

const pricing = await getEntry("pricing", "-index");
const { title, description, meta_title, image, hero } =
  pricing.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}>
  <PricingSection largeHeading={true} content={hero} />
  <Testimonial largeHeading={false} lightColorScheme={true} visibleTestimonial={3} />
  <Faq />
  <CallToAction />
</Base>
