---
import Base from "@/layouts/Base.astro";
import OurTeam from "@/partials/OurTeam.astro";
import OurValues from "@/partials/OurValues.astro";
import AboutBanner from "@/partials/CompanyBanner.astro";
import CallToAction from "@/partials/CallToAction.astro";
import Faq from "@/partials/Faq.astro";
import { getEntry } from "astro:content";
import Gallery from "@/partials/Gallery.astro";

const company = await getEntry("company", "-index");
const { title, description, meta_title, image } = company.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}>
  <AboutBanner />
  <Gallery />
  <OurValues />
  <OurTeam />
  <Faq />
  <CallToAction />
</Base>
