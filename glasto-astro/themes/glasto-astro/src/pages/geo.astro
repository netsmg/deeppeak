---
import Base from "@/layouts/Base.astro";

const title = "Geo | DeepPeak";
const meta_title = "Secure Location Page";
const description = "Access your Location securely with our modern geo system."; 
const OPENCAGE_API_KEY = "1ff2ae6587f048eb834579cfb859936f";
---

<Base title={title} meta_title={meta_title} description={description}>
  <div class="min-h-screen bg-gray-100 py-8">
    <main class="container mx-auto px-4">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Location Finder</h1>
        
        <form class="space-y-4" onsubmit="fetchLocation(event)">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Enter Location
            </label>
            <input
              type="text"
              id="locationInput"
              class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              placeholder="e.g. Dhaka, Bangladesh"
              required
            />
          </div>
          
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors"
          >
            Search
          </button>
        </form>

        <div id="results" class="mt-6 space-y-4 hidden">
          <div class="p-4 bg-gray-50 rounded-lg">
            <h2 class="text-lg font-semibold text-gray-800 mb-2">Location Details</h2>
            <div class="space-y-2">
              <p class="text-sm"><span class="font-medium">Latitude:</span> <span id="lat"></span></p>
              <p class="text-sm"><span class="font-medium">Longitude:</span> <span id="lng"></span></p>
              <p class="text-sm"><span class="font-medium">City:</span> <span id="city"></span></p>
              <p class="text-sm"><span class="font-medium">State:</span> <span id="state"></span></p>
              <p class="text-sm"><span class="font-medium">Country:</span> <span id="country"></span></p>
            </div>
          </div>
        </div>

        <div id="error" class="mt-4 text-red-600 text-sm hidden"></div>
      </div>
    </main>
  </div>

  <script>
    async function fetchLocation(event) {
      event.preventDefault();
      const input = document.getElementById('locationInput').value;
      const resultsDiv = document.getElementById('results');
      const errorDiv = document.getElementById('error');

      try {
        const response = await fetch(
          `https://api.opencagedata.com/geocode/v1/json?q=${encodeURIComponent(input)}&key=${OPENCAGE_API_KEY}`
        );

        const data = await response.json();
        
        if (data.results.length > 0) {
          const { geometry, components } = data.results[0];
          document.getElementById('lat').textContent = geometry.lat;
          document.getElementById('lng').textContent = geometry.lng;
          document.getElementById('city').textContent = components.city || 'N/A';
          document.getElementById('state').textContent = components.state || 'N/A';
          document.getElementById('country').textContent = components.country || 'N/A';
          
          resultsDiv.classList.remove('hidden');
          errorDiv.classList.add('hidden');
        } else {
          errorDiv.textContent = 'Location not found';
          errorDiv.classList.remove('hidden');
          resultsDiv.classList.add('hidden');
        }
      } catch (err) {
        errorDiv.textContent = 'Error fetching location data';
        errorDiv.classList.remove('hidden');
        resultsDiv.classList.add('hidden');
      }
    }
  </script>
</Base>
