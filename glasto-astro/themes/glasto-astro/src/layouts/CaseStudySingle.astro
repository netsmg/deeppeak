---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "./components/ImageMod.astro";

const { post } = Astro.props;

const { Content } = await post.render();
const { title, image } = post.data;
---

<section class="section">
  <div class="container">
    <div class="row">
      <div class="lg:col-11" data-aos="fade-up-sm">
        {title && <h1 set:html={markdownify(title)} class="mb-4" />}
      </div>
      <div class="col-12 pt-12" data-aos="fade-up-sm" data-aos-delay="200">
        {
          image && (
            <div class="mb-10">
              <ImageMod
                src={image}
                height={500}
                width={1200}
                alt={title}
                class="h-auto w-full rounded-lg object-cover md:h-[700px]"
              />
            </div>
          )
        }
      </div>
      <article class="pb-10 lg:col-10 mx-auto" data-aos="fade-up-sm">
        <div class="content">
          <Content />
        </div>
      </article>
    </div>
  </div>
</section>
