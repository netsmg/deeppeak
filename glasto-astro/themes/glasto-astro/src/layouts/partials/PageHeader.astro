---
import { humanize } from "@/lib/utils/textConverter";

const { title = "" }: { title?: string } =
  Astro.props;
---

<section>
  <div class="container text-center" data-aos="fade-up-sm">
    <div class="rounded-2xl px-8 pt-16 md:pt-24">
      <h1 class="h2 md:h1" set:text={humanize(title)} />
    </div>
  </div>
</section>
